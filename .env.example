# ========================================
# OSNOVCI - Environment Variables Template
# ========================================
# Copy this file to .env and fill in your values
# Never commit .env to git!

# ========================================
# DATABASE (Required)
# ========================================
DATABASE_URL="postgresql://user:password@localhost:5432/osnovci?schema=public"
# For SQLite (development): DATABASE_URL="file:./dev.db"

# ========================================
# NEXTAUTH (Required)
# ========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-minimum-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# ========================================
# CSRF PROTECTION (Optional)
# ========================================
# If not set, will use NEXTAUTH_SECRET as fallback
# CSRF_SECRET="your-csrf-secret-minimum-32-characters"

# ========================================
# UPSTASH REDIS (Optional - Recommended for Production)
# ========================================
# For rate limiting, caching, and account lockout
# Get from: https://console.upstash.com/
# UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-token"

# ========================================
# SENTRY ERROR TRACKING (Optional - Recommended for Production)
# ========================================
# Get from: https://sentry.io/
# SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
# SENTRY_ORG="your-org"
# SENTRY_PROJECT="your-project"
# SENTRY_AUTH_TOKEN="your-auth-token"

# ========================================
# EMAIL (SMTP) - Optional
# ========================================
# For email verification and parental consent
# EMAIL_HOST="smtp.gmail.com"
# EMAIL_PORT="587"
# EMAIL_USER="your-email@gmail.com"
# EMAIL_PASSWORD="your-app-password"
# EMAIL_FROM="Osnovci <noreply@osnovci.rs>"

# ========================================
# PUSH NOTIFICATIONS (VAPID) - Optional
# ========================================
# For web push notifications
# Generate with: npx web-push generate-vapid-keys
# NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-public-key"
# VAPID_PRIVATE_KEY="your-private-key"

# ========================================
# ANALYTICS (Optional)
# ========================================
# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-analytics-id"

# ========================================
# APP CONFIGURATION
# ========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"
